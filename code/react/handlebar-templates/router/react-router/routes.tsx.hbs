import { lazy } from "react";

const Home = lazy(() => import("@/ui/pages"));
const About = lazy(() => import("@/ui/pages/about"));
const NotFound = lazy(() => import("@/ui/pages/not-found"));
{{#each routes}}
const {{pascalCase name}} = lazy(() => import("@/ui/pages/{{kebabCase name}}"));
{{/each}}

const routes = [
  { path: "/", component: Home },
  { path: "/about", component: About },
  {{#each routes}}
  { path: "/{{path}}", component: {{pascalCase name}} },
  {{/each}}
  { path: "*", component: NotFound }
];

export default routes;
