{
  "name": "reactjs-boilerplate",
  "repository": "git@github.com:monstar-lab-oss/reactjs-boilerplate.git",
  "author": "山下 仁麻 <jinma.yamashita@monstar-lab.com>",
  "scripts": {
    "test:cli": "turbo run build --filter=create-codes test --filter=create-codes",
    "test:modules": "turbo run test --filter='./code/*' && turbo run test --filter='./code/*/*'",
    "e2e": "turbo run e2e",
    "type": "turbo run type --filter=!reactjs-boilerplate",
    "lint": "turbo run lint --filter=!reactjs-boilerplate",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "1.7.4",
    "prettier": "2.8.8",
    "husky": "8.0.3",
    "lint-staged": "13.1.1",
    "eslint-config-custom": "workspace:*"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  }
}
